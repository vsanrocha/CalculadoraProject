<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.calculadora.vinicius.calculadora.MainActivity">

    <TextView
        android:id="@+id/calculatorDisplay"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text=""
        android:layout_margin="16dp"
        />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_below="@+id/button4"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="16dp"
        android:onClick="onButtonNumberClick"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:layout_toRightOf="@id/button1"
        android:layout_below="@+id/button6"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:onClick="onButtonNumberClick"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:layout_toRightOf="@id/button2"
        android:layout_below="@+id/button5"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:onClick="onButtonNumberClick"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:layout_below="@+id/button7"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="16dp"
        android:onClick="onButtonNumberClick"/>

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:layout_toRightOf="@+id/button6"
        android:layout_below="@+id/button9"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:onClick="onButtonNumberClick"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:layout_toRightOf="@id/button4"
        android:layout_below="@+id/button8"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:onClick="onButtonNumberClick"/>

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:layout_below="@id/calculatorDisplay"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="16dp"
        android:onClick="onButtonNumberClick"/>

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:layout_toRightOf="@id/button7"
        android:layout_below="@id/calculatorDisplay"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:onClick="onButtonNumberClick"/>

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:layout_toRightOf="@id/button8"
        android:layout_below="@id/calculatorDisplay"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:onClick="onButtonNumberClick"/>

    <Button
        android:id="@+id/button0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_below="@id/button1"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="16dp"
        android:onClick="onButtonNumberClick"/>

    <Button
        android:id="@+id/buttonEqual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:layout_below="@id/button3"
        android:layout_toRightOf="@id/button0"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:onClick="buttonEqual"/>

    <Button
        android:id="@+id/acrecentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:layout_below="@id/calculatorDisplay"
        android:layout_toRightOf="@id/button9"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:onClick="onPlusClick"/>

    <Button
        android:id="@+id/minusButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:layout_below="@id/acrecentButton"
        android:layout_toRightOf="@id/button5"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:onClick="onMinusClick"/>

    <Button
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CE"
        android:layout_below="@id/minusButton"
        android:layout_toRightOf="@id/button5"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:onClick="onClearClick"/>


</RelativeLayout>
